{% extends 'layout_base.html.twig' %}

{% block titre_page %} Fiche Fournisseur {% endblock %}
{% block sous_titre_page %} le fournisseur {% endblock %}
{% block nouveau %}<a href="{{ path('fournisseurs_new') }}">Nouveau</a>{% endblock %}

 {% block contenuprincipal %}


    <table class="table-striped table">
        <tbody>

            <tr>
                <th>Fournisseur</th>
                <td>{{ fournisseur.NomFournisseur }} {{ fournisseur.PrenomFournisseur }}</td>
            </tr>

            <tr>
                <th>Situation Geographique</th>
                <td>{{ fournisseur.SituationGeographique }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ fournisseur.TelephoneFournisseur }}</td>
            </tr>
        </tbody>
    </table>

     <div class=" main-container table-container">
         <div class="row">
             <div class="col-xs-12 col-sm-3 col-md-3 col-lg-4">
                 <div class="card">
                     <div class="card-body">
                         <h4 class="card-title">Produits</h4>
                         <h6 class="card-subtitle mb-2 text-muted">{{ produits|length }} produit(s)</h6>
                         <table class="table-striped table">
                             <thead>
                             <tr>
                                 <th>#</th>
                                 <th>Produit</th>
                                 <th>Prix</th>

                             </tr>
                             </thead>
                             <tbody>
                             {% for prod in produits %}
                                 <tr>
                                     <td>{{ loop.index }}</td>
                                 <td>{{ prod.produit.libelleProduit }}</td>
                                     <td>{{ prod.prix }}</td>
                                 </tr>
                             {% else %}
                                 <tr>
                                     <td colspan="2">Pas de produits avec ce fournisseur </td>
                                 </tr>
                             {% endfor %}
                             </tbody>

                         </table>

                     </div>
                 </div>
             </div>
             <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4">
                 <div class="card">
                     <div class="card-body">
                         <h4 class="card-title">Approvisionement</h4>
                         <h6 class="card-subtitle mb-2 text-muted" align="right">Les dix derniers</h6>
                         <table class="table-striped table">
                             <thead>
                             <tr>
                                 <th>#</th>
                                 <th>Date</th>
                                 <th>Produits</th>
                                 <th>Quantite</th>
                                 <th>Prix</th>
                                 <th>Total</th>

                             </tr>
                             </thead>
                             <tbody>
                             {% for app in appro %}
                                 <tr>
                                     <td>{{ loop.index }}</td>
                                     <td>{{ app.getDateAppro() }}</td>

                                 </tr>
                             {% else %}
                                 <tr>
                                     <td colspan="6">Pas d'approvisioment</td>
                                 </tr>
                             {% endfor %}
                             </tbody>

                         </table>

                     </div>
                 </div>
             </div>
             <div class="col-xs-12 col-sm-3 col-md-3 col-lg-4">
                 <div class="card">
                     <div class="card-body">
                         <h4 class="card-title">Reboursement </h4>
                         <h6 class="card-subtitle mb-2 text-muted"></h6>
                         <table class="table-striped table">
                             <thead>
                             <tr>
                                 <th>#</th>
                                 <th>Date </th>
                                 <th>Montant</th>

                             </tr>
                             </thead>
                             <tbody>

                                 {#<tr>#}
                                     {#<td>{{ loop.index }}</td>#}
                                     {#<td>{{ prod.produit.libelleProduit }}</td>#}
                                     {#<td>{{ prod.prix }}</td>#}
                                 {#</tr>#}
                             {#{% else %}#}
                                 <tr>
                                     <td colspan="2">Pas de remboursement en cours </td>
                                 </tr>
                             {#{% endfor %}#}
                             </tbody>

                         </table>

                     </div>
                 </div>
             </div>

         </div>
     </div>

    <a href="{{ path('fournisseurs_index') }}">Retour</a>

    <a href="{{ path('fournisseurs_edit', {'id': fournisseur.id}) }}">Modifier</a>

    {{ include('fournisseurs/_delete_form.html.twig') }}
{% endblock %}